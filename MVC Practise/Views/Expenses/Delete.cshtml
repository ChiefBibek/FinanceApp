@model FinanceApp.Models.Expense

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-0 text-danger">Delete Expense</h1>
        <p class="text-muted small mb-0">This action cannot be undone. Confirm below to permanently remove the entry.</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back</a>
    </div>
</div>

<div class="card border-0 shadow-sm mx-auto" style="max-width:720px;">
    <div class="card-body">
        <div class="mb-4">
            <h5 class="mb-1">@Model.Description</h5>
            <div class="text-muted small">@Model.Date.ToShortDateString()</div>
        </div>

        <ul class="list-unstyled mb-4">
            <li><strong>Amount:</strong> @Model.Amount.ToString("C")</li>
            <li><strong>Category:</strong> @Model.Category</li>
        </ul>

        <form asp-action="Delete" method="post">
            <input asp-for="ID" type="hidden" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete permanently</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>