@model FinanceApp.Models.Expense

<div class="container">
    <h2>Delete Expense</h2>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Description</h5>
            <p class="card-text"><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
            <p class="card-text"><strong>Category:</strong> @Model.Category</p>
            <p class="card-text"><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input asp-for="ID" type="hidden" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>