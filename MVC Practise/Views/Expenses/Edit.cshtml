@model FinanceApp.Models.Expense

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h4 mb-0">Edit Expense</h1>
        <p class="text-muted small mb-0">Adjust details and save.</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back</a>
    </div>
</div>

<div class="card border-0 shadow-sm mx-auto" style="max-width:720px;">
    <div class="card-body">
        <form asp-action="Edit" method="post" novalidate>
            <input asp-for="ID" type="hidden" />
            <div class="mb-3 form-floating">
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="Amount" />
                    <label asp-for="Amount">Amount</label>
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Category" class="form-control" placeholder="Category" />
                    <label asp-for="Category">Category</label>
                    <span asp-validation-for="Category" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="Date" type="date" class="form-control" placeholder="Date" />
                <label asp-for="Date">Date</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>