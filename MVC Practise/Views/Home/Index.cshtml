@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="display-5 mb-1">Welcome</h1>
        <p class="text-muted mb-0">Quick links to manage your expenses.</p>
    </div>
    <div>
        <a asp-controller="Expenses" asp-action="Create" class="btn btn-success btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-plus me-1" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5V7.5H11.5a.5.5 0 0 1 0 1H8.5V11.5a.5.5 0 0 1-1 0V8.5H4.5a.5.5 0 0 1 0-1H7.5V4.5A.5.5 0 0 1 8 4z" />
            </svg>
            Add Expense
        </a>
    </div>
</div>

<!-- Minimal nav card linking to expenses -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body d-flex gap-3 flex-wrap align-items-center">
        <a asp-controller="Expenses" asp-action="Index" class="btn btn-outline-primary d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                <path d="M2 2h12v2H2V2zm0 3h12v9H2V5zm1 1v7h10V6H3z" />
            </svg>
            View Expenses
        </a>

        <a asp-controller="Expenses" asp-action="Create" class="btn btn-outline-success d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5V7.5H11.5a.5.5 0 0 1 0 1H8.5V11.5a.5.5 0 0 1-1 0V8.5H4.5a.5.5 0 0 1 0-1H7.5V4.5A.5.5 0 0 1 8 4z" />
            </svg>
            Add Expense
        </a>

        <a asp-controller="Expenses" asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center" asp-route-filter="thismonth">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                <path d="M8 1a1 1 0 0 1 1 1v1h2a1 1 0 0 1 1 1v1H2V4a1 1 0 0 1 1-1h2V2a1 1 0 0 1 1-1h2zM2 8v5a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V8H2z" />
            </svg>
            This Month
        </a>
    </div>
</div>

<div class="text-center">
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>